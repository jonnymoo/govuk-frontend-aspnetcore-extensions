@using GovUk.Frontend.Umbraco.Models;
@using ThePensionsRegulator.Frontend.HtmlGeneration;
@using Umbraco.Cms.Core.Strings;
@using ThePensionsRegulator.Frontend.Umbraco.Models;
@model TprFooterLockupModel
@addTagHelper *, ThePensionsRegulator.Frontend
@{
    var footerLogoAlt = Model.LogoAlternativeText();
    if (string.IsNullOrEmpty(footerLogoAlt)) { footerLogoAlt = ComponentGenerator.FooterLogoDefaultAlt; }
}
@if (Model.ShowBackToTop)
{
    <tpr-back-to-top class="@Model.BackToTopClass()">@Model.BackToTopText()</tpr-back-to-top>
}
@if (Model.ShowFooter)
{
    <tpr-footer-bar class="@Model.FooterBarClass()">
        <tpr-footer-bar-logo alt="@footerLogoAlt" href="@Model.LogoHref()"/>
        <tpr-footer-bar-copyright>@Model.Copyright()</tpr-footer-bar-copyright>
        <tpr-footer-bar-content allow-html="true">
            @Html.Raw(Model.FooterBarContent())
        </tpr-footer-bar-content>
    </tpr-footer-bar>
}