@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<FilteredBlockListItem>;
@addTagHelper *, GovUk.Frontend.AspNetCore
@addTagHelper *, GovUk.Frontend.AspNetCore.Extensions
@using GovUk.Frontend.Umbraco.Html
@using GovUk.Frontend.Umbraco.Models
@using Umbraco.Extensions
@{
    ViewContext.ModelState.TryGetValue(Model.Item.Settings.Value<string>("modelProperty"), out var modelStateEntry);
}
<govuk-client-side-validation
    error-message-required="@(Model.Item.Settings.Value<string>("errorMessageRequired"))"
    error-message-regex="@(Model.Item.Settings.Value<string>("errorMessageRegex"))"
    error-message-email="@(Model.Item.Settings.Value<string>("errorMessageEmail"))"
    error-message-length="@(Model.Item.Settings.Value<string>("errorMessageLength"))"
    error-message-minlength="@(Model.Item.Settings.Value<string>("errorMessageMinLength"))"
    error-message-maxlength="@(Model.Item.Settings.Value<string>("errorMessageMaxLength"))"
    error-message-range="@(Model.Item.Settings.Value<string>("errorMessageRange"))"
    error-message-compare="@(Model.Item.Settings.Value<string>("errorMessageCompare"))"
    error-message-credit-card="@(Model.Item.Settings.Value<string>("errorMessageCreditCard"))"
>
    <govuk-input name="@(Model.Item.Settings.Value<string>("modelProperty"))" value="@modelStateEntry?.AttemptedValue" input-class="@(Model.Item.Settings.Value<string>("cssClasses"))">
        <govuk-input-label>@(Model.Item.Content.Value<string>("label"))</govuk-input-label>
        <govuk-input-hint>@Html.Raw(GovUkHtmlHelper.RemoveWrappingParagraph(Model.Item.Content.Value<string>("hint")))</govuk-input-hint>
        <govuk-input-error-message>@(modelStateEntry != null && modelStateEntry.Errors.Any() ? string.Join(". ", modelStateEntry.Errors.Select(x => x.ErrorMessage)) : null)</govuk-input-error-message>
    </govuk-input>
</govuk-client-side-validation>