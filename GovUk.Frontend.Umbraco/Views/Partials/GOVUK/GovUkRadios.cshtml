@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockListItem>;
@addTagHelper *, GovUk.Frontend.AspNetCore
@using GovUk.Frontend.Umbraco.Html
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Extensions
@{
    var radioButtons = Model.Content.Value<BlockListModel>("radioButtons");
    var group = Model.Settings.Value<string>("modelProperty");
}
<govuk-radios name="@group">
    @foreach (var block in radioButtons)
    {
        <govuk-radios-item value="@(block.Content.Value<string>("value"))" class="@(block.Settings.Value<string>("cssClasses"))">@(block.Content.Value<string>("label"))
            <govuk-radios-item-hint>@Html.Raw(GovUkHtmlHelper.RemoveWrappingParagraph(block.Content.Value<string>("hint")))</govuk-radios-item-hint>
        </govuk-radios-item>
    }
</govuk-radios>